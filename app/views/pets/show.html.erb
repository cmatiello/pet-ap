<div class="container-fluid show">
  <div class="col-10">
      <div class="card">
        <div class="card-header">
          Pet
        </div>
        <div class="card-body">
          <div class="card-title">
            Tutor:
            <%= @pet.tutor %>
          </div>
          <div class="card-text">
            Phone: <%= @pet.phone %>
            <br>
            Breed: <%= @pet.breed %>
            <br>
            Size: <%= @pet.size %>
            <br>
            Description: <%= @pet.description %>
          </div>
          <div class="form-buttons">
            <%= link_to 'Back', pets_path, class: "btn btn-secondary" %>
          </div>
        </div>
    </div>

  </div>
</div>
